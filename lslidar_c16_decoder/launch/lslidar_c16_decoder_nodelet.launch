<launch>

  <arg name="fixed_frame_id" default="map" />
  <arg name="child_frame_id" default="lslidar" />

  <include file="$(find lslidar_c16_driver)/launch/lslidar_c16_driver_nodelet.launch" />

  <node pkg="nodelet" type="nodelet" name="lslidar_c16_decoder_nodelet" args="load lslidar_c16_decoder/LslidarC16DecoderNodelet
    lslidar_c16_nodelet_manager" output="screen">
    <param name="fixed_frame_id" value="$(arg fixed_frame_id)" />
    <param name="child_frame_id" value="$(arg child_frame_id)" />

    <param name="min_range" value="0.3" />
    <param name="max_range" value="100.0" />
    <param name="frequency" value="10.0" />
    <param name="publish_point_cloud" value="true" />
    <param name="ground_point_min_laser_index" value="0" />
    <param name="ground_point_max_laser_index" value="7" />
    <param name="ground_point_min_angle" value="90" />
    <param name="ground_point_distance_tolerance" value="0.03" />
  </node>

  <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find lslidar_c16_decoder)/launch/lslidar_c16.rviz" output="screen"/>
-->
</launch>